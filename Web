<script>
function saveTodo(){
  localStorage.setItem("todo", todo.value);
}
todo.value = localStorage.getItem("todo") || "";

function saveTime(){
  localStorage.setItem("wake", wake.value);
  localStorage.setItem("sleep", sleep.value);
}
wake.value = localStorage.getItem("wake") || "";
sleep.value = localStorage.getItem("sleep") || "";

function calc(){
  let d = done.value, t = total.value;
  let p = Math.round((d/t)*100);
  result.innerHTML = "Hari ini produktif: " + p + "%";
}
</script>

